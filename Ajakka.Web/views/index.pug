extends layout
block header
  script(src='./js/formatting.js')
  script(src='./js/moment.js')
block content
  h1= title
  
  div.table-responsive-sm
    table.table.table-striped.table-hover
      caption Detected endpoints
      thead.thead-dark
        tr
          th MAC
          th IP
          th Name
          th Timestamp
      tbody#endpointListContainer
        tr
          td(colspan='4')
            i.fa.fa-circle-o-notch.fa-spin
      tfoot
        tr
          td(colspan='4')
            span#pageCount
  script(src='./js/index/endpoints.js')