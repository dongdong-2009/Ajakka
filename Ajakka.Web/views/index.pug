extends dashboardlayout
block header
  script(src='./js/formatting.js')
  script(src='./js/moment.js')
  link(rel="stylesheet", href="./stylesheets/index.css")
block content
  script.
      $('#dashboardNav').addClass('active')
  #currentPage=page
  h1 Detected Devices
  div.table-responsive-sm
    table.table.table-striped.table-hover
      caption Detected endpoints
      thead.thead-dark
        tr
          th MAC
          th IP
          th Name
          th Timestamp
          th.last-column
            span#pageCount
      tbody#endpointListContainer
        tr
          td(colspan='5')
            i.fas.fa-spinner.fa-spin
  script(src='./js/index/endpoints.js')